<Page
    x:Class="VisualCrypt.Windows.Pages.MainPagePhone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:VisualCrypt.Windows.Controls"
    NavigationCacheMode="Disabled"
    xmlns:local="using:VisualCrypt.Windows.Controls"
    d:DesignHeight="800"
    d:DesignWidth="480"
    mc:Ignorable="d">
    <Page.Resources>
        <!--<ResourceDictionary Source="/Styles/InUse/BarStyles.xaml" />-->
    </Page.Resources>
    <Page.TopAppBar>
        <CommandBar x:Name="TopAppBar" Style="{StaticResource CommandBarStyle}">
            <AppBarButton x:Name="abbBack" x:FieldModifier="public" Style="{StaticResource AppBarButtonStyle}" HorizontalAlignment="Left" Label="Back" Command="{x:Bind _viewModel.GoBackToFilesCommand}" Icon="Back" Width="48" />
            <AppBarButton x:Name="abbSave" x:FieldModifier="public" Style="{StaticResource AppBarButtonStyle}" Label="Save" Command="{x:Bind _viewModel.SaveCommand}" Icon="Save" Width="48" />
            <AppBarButton x:Name="abbShare" x:FieldModifier="public" Style="{StaticResource AppBarButtonStyle}" Label="Share" Icon="Send" Width="48" />
            <AppBarButton x:Name="abbEncrypt" x:FieldModifier="public" Style="{StaticResource AppBarButtonStyle}" Command="{x:Bind _viewModel.EncryptEditorContentsCommand}" Width="60"   >
                <AppBarButton.Icon> 
                    <FontIcon Glyph="Encrypt" FontFamily="Segoe UI" FontSize="15"  />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="abbDecrypt" x:FieldModifier="public" Style="{StaticResource AppBarButtonStyle}" Command="{x:Bind _viewModel.DecryptEditorContentsCommand}" Width="60"  >
                <AppBarButton.Icon>
                    <FontIcon  Glyph="Decrypt" FontFamily="Segoe UI" FontSize="15" />
                </AppBarButton.Icon>
            </AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Style="{StaticResource AppBarButtonStyle}" Label="Export" Command="{x:Bind _viewModel.ExportCommand}" Icon="View"  />
                <AppBarButton Style="{StaticResource AppBarButtonStyle}" Width="Auto" Label="{x:Bind _viewModel.PasswordInfo.HyperlinkPasswordText, Mode=OneWay}" Command="{x:Bind _viewModel.ShowSetPasswordDialogCommand}" Icon="HideBcc"  />
            </CommandBar.SecondaryCommands>
            <CommandBar.Content>
                <TextBlock x:Name="CommandBarContentTextBlock"/>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>

    <Grid Background="Black" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ScrollViewer.VerticalScrollMode="Disabled"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="ExtendedAppBar" Grid.Row="0" Background="{StaticResource AccentColorBrush}" Height="38" MinHeight="38">
            <StackPanel>
                <controls:PlainTextBarPhoneTop
                    Visibility="{x:Bind _viewModel.StatusBarModel.IsPlaintextBarVisible, Mode=OneWay, Converter={StaticResource BoolVisibility}}" />
                <controls:WorkingBarPhone
                    Visibility="{x:Bind _viewModel.StatusBarModel.IsProgressBarVisible, Mode=OneWay,Converter={StaticResource BoolVisibility}}" />
                <controls:EncryptedBarPhoneTop
                    Visibility="{x:Bind _viewModel.StatusBarModel.IsEncryptedBarVisible, Mode=OneWay,Converter={StaticResource BoolVisibility}}" />
            </StackPanel>
        </Border>
        <controls:PasswordUserControl x:Name="PasswordUserControl" x:FieldModifier="public" Grid.Row="1" Visibility="Collapsed"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{StaticResource AccentColorBrush}" />

        <controls:EditorUserControl x:Name="EditorUserControl" x:FieldModifier="public" Grid.Row="2"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                    VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
       
        <Border x:Name="BottomBar" Grid.Row="3" Background="{StaticResource AccentColorBrush}">
            <StackPanel>
                <controls:PlainTextBarPhoneBottom
                    Visibility="{x:Bind _viewModel.StatusBarModel.IsPlaintextBarVisible, Mode=OneWay, Converter={StaticResource BoolVisibility}}" />
                <controls:EncryptedBarPhoneBottom
                    Visibility="{x:Bind _viewModel.StatusBarModel.IsEncryptedBarVisible, Mode=OneWay,Converter={StaticResource BoolVisibility}}" />
            </StackPanel>
        </Border>
        <Canvas x:Name="PrintCanvas" Opacity="0" />
    </Grid>
</Page>
