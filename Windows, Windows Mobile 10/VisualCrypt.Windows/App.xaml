<Application
    x:Class="VisualCrypt.Windows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light"
    xmlns:valueConverters="using:VisualCrypt.Windows.ValueConverters"
    >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/InUse/VisualCryptColors.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <valueConverters:BoolVisibilityConverter x:Key="BoolVisibility"/>
            <valueConverters:EnabledToBrushConverter x:Key="EnabledToBrush"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
   
