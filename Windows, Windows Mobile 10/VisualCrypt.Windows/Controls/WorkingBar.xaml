<UserControl
    x:Class="VisualCrypt.Windows.Controls.WorkingBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary
            Source="/Styles/InUse/BarStyles.xaml" />
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <TextBlock>
                <Hyperlink Click="WorkingBar_Cancel_Click">
                    <Run x:Uid="termCancel" />
                </Hyperlink>
            </TextBlock>

            <ProgressBar Width="150" Height="8" Margin="5,4,5,0" IsIndeterminate="False" Foreground="#FF77FF77"
                         BorderThickness="0" Background="{StaticResource BarColorBrush}"
                         Value="{x:Bind _viewModel.StatusBarModel.ProgressPercent, Mode=OneWay}" />
            <TextBlock>
                <Run Text="{x:Bind _viewModel.StatusBarModel.ProgressBarOpName, Mode=OneWay}" />
                <Run Text="{x:Bind _viewModel.StatusBarModel.ProgressMessage}" />
            </TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
