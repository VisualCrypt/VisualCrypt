<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Color x:Key="BlueColor">#FF0078D7</Color>

    <Color x:Key="AccentColor">#FFAF0007</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#CCAF0007</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#66AF0007</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#33AF0007</Color>

    <Color x:Key="BarColor">#CCF0F0F0</Color>
    <Color x:Key="ButtonColor">#FFDDDDDD</Color>


    <SolidColorBrush x:Key="BarColorBrush" Color="{StaticResource BarColor}" />
    <SolidColorBrush x:Key="ButtonColorBrush" Color="{StaticResource ButtonColor}" />
    <!-- re-set brushes too -->
    <SolidColorBrush x:Key="BlueColorBrush" Color="{StaticResource BlueColor}" />
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentColorBrush2" Color="{StaticResource AccentColor2}" />
    <SolidColorBrush x:Key="AccentColorBrush3" Color="{StaticResource AccentColor3}" />
    <SolidColorBrush x:Key="AccentColorBrush4" Color="{StaticResource AccentColor4}" />


</ResourceDictionary>