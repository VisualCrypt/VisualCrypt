<UserControl
    x:Class="VisualCrypt.Windows.Controls.EncryptedBarPhoneBottom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <StackPanel Style="{StaticResource BottomBarStackPanelStyle}">
            <TextBlock  Style="{StaticResource BottomBarTextBlockStyle}" Text="{x:Bind _viewModel.FileModel.ShortFilename, Mode=OneWay}" />
            <TextBlock Style="{StaticResource BottomBarTextBlockStyle}" Text="{x:Bind _viewModel.StatusBarModel.EncrytedBarText, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</UserControl>
