<controls:MetroWindow x:Class="VisualCrypt.Desktop.Views.SetPasswordDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:views="clr-namespace:VisualCrypt.Desktop.Views"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Title="Set Password" Height="165.147" Width="320.932" WindowStartupLocation="CenterOwner"
                      d:DataContext="{d:DesignInstance views:SetPasswordDialog}">
    <Grid>
        <StackPanel Margin="0">
            <TextBlock Margin="3">Password:</TextBlock>
            <PasswordBox Name="PwBox" PasswordChanged="Password_Changed" Margin="3" x:FieldModifier="private" />
            <TextBlock Margin="3">Password (repeat):</TextBlock>
            <PasswordBox Name="PwBox2" PasswordChanged="Password2_Changed" Margin="3" x:FieldModifier="private" />
            <DockPanel HorizontalAlignment="Stretch">
                <Button DockPanel.Dock="Left" HorizontalAlignment="Right" Width="65"
                        Command="{Binding ClearPasswordCommand}">
                    Clear
                </Button>

                <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Width="65" Click="Button_Click">Cancel</Button>
                <Button x:Name="ButtonOk" DockPanel.Dock="Right" IsDefault="True" HorizontalAlignment="Right"
                        Width="65"
                        Command="{Binding SetPasswordCommand}">
                    Set
                </Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</controls:MetroWindow>