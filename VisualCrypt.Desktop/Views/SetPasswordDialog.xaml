<controls1:AppWindow x:Class="VisualCrypt.Desktop.Views.SetPasswordDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:views="clr-namespace:VisualCrypt.Desktop.Views"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:controls1="clr-namespace:VisualCrypt.Desktop.Shared.Controls;assembly=VisualCrypt.Desktop.Shared"
                      mc:Ignorable="d"
                      Title="Set Password" Height="300" Width="500" WindowStartupLocation="CenterOwner"
                      d:DataContext="{d:DesignInstance views:SetPasswordDialog}"
                      Background="{DynamicResource BarColorBrush}"
                      >
    <controls1:AppWindow.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="15,0"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>

        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Margin" Value="15,0,15,10"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="Auto"></Setter>
            <Setter Property="MinWidth" Value="65"></Setter>
            <Setter Property="Margin" Value="15"></Setter>
            <Setter Property="Padding" Value="10,0"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
        </Style>
       
    </controls1:AppWindow.Resources>
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"></ColumnDefinition>
                <ColumnDefinition Width="100*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid x:Name="SymbolCol" Grid.Column="0">

            </Grid>
            <Grid x:Name="MainCol" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid x:Name="ContentRow" Grid.Row="0">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding Title}" FontSize="20" LineHeight="35"
                                   ></TextBlock>
                      
                        <TextBlock TextWrapping="Wrap">The password or passphrase must have between 1 and 10 million Unicode characters. The 256 bit AES encryption key will be derived from the password using SHA-256 and Bcrypt hash algorithms.</TextBlock>
                        <TextBlock></TextBlock>
                        <TextBlock>Password, please type or paste:</TextBlock>
                        <PasswordBox Name="PwBox" PasswordChanged="Password_Changed" x:FieldModifier="private" />
                        <TextBlock>Password, please repeat:</TextBlock>
                        <PasswordBox Name="PwBox2" PasswordChanged="Password2_Changed"  x:FieldModifier="private" />

                    </StackPanel>
                </Grid>
                <Grid x:Name="ButtonRow" Grid.Row="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button  Content="Clear" Command="{Binding ClearPasswordCommand}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button  Content="Cancel" Click="Button_Click"/>
                        <Button HorizontalAlignment="Right" Content="Set" x:Name="ButtonOk" IsDefault="True" Command="{Binding SetPasswordCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</controls1:AppWindow>