<Window x:Class="VisualCrypt.Desktop.Views.LogWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      x:Name="Window"
                      Title="Log"
                      WindowStartupLocation="CenterScreen"
                      UseLayoutRounding="True"
                      Width="640" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">In-Memory Log</TextBlock>
        <TextBox x:Name="TraceTextBox" Grid.Row="1" Margin="10,0,10,10" TextWrapping="Wrap"
                 VerticalAlignment="Stretch" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"
                 MinHeight="200" />
    </Grid>
</Window>