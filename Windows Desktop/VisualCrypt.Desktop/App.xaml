<Application x:Class="VisualCrypt.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:valueConverters="clr-namespace:VisualCrypt.Desktop.ValueConverters"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Styles/InUse/VisualCryptColors.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <valueConverters:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
            <valueConverters:IsHiddenVisibilityConverter x:Key="IsHiddenVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>