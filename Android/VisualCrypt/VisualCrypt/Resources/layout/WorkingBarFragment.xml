<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
  <TextView
      android:text="*Cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/workingBarFragment_textViewCancel" />
  <ProgressBar
android:layout_width="wrap_content"
android:layout_height="wrap_content"
style="?android:attr/android:progressBarStyleSmall"
 android:id="@+id/workingBarFragment_progressBar"
/>
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
       android:text="OpTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/workingBarFragment_textViewProgress1" />
    <TextView
        android:text="*OpDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workingBarFragment_textViewProgress2" />
  </LinearLayout>

</LinearLayout>
